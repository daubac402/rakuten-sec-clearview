{
    "name": "Rakuten Securities NISA Clear View",
    "version": "1.0",
    "description": "A Google Chrome extension for improve the UI of https://www.rakuten-sec.co.jp/web/nisa/",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://member.rakuten-sec.co.jp/app/*"
            ],
            "css": [
                "css/main.css"
            ],
            "js": [
                "js/jquery.min.js",
                "js/main.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "manifest_version": 2
}